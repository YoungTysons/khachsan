<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qlykhsan.admin.ThongBao">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Thông Báo">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <VBox style="-fx-border-color: #cccccc; -fx-background-color: white;">
                    <children>
                        <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;" text="Gửi thông báo mới">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                            </padding>
                        </Label>

                        <VBox spacing="10.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tiêu đề" />
                                        <TextField fx:id="tfTieuDe" promptText="Nhập tiêu đề thông báo..." />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nội dung" />
                                        <TextArea fx:id="taNoiDung" prefHeight="80.0" promptText="Nhập nội dung chi tiết..." wrapText="true" />
                                    </children>
                                </VBox>

                                <Button fx:id="btnGuiThongBao" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: #007bff;" text="Gửi thông báo" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" top="8.0" />
                                    </padding>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>

                <VBox style="-fx-border-color: #cccccc; -fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;" text="Danh sách thông báo">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                            </padding>
                        </Label>

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="vboxDanhSachThongBao" spacing="10.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                    <children>

                                        <VBox style="-fx-border-color: #dddddd; -fx-background-color: #fcfcfc; -fx-border-radius: 3;">
                                            <children>
                                                <BorderPane>
                                                    <left>
                                                        <Label text="Thông báo cúp điện" BorderPane.alignment="CENTER">
                                                            <font>
                                                                <Font name="System Bold" size="14.0" />
                                                            </font>
                                                        </Label>
                                                    </left>
                                                    <right>
                                                        <Label text="2024-12-10" textFill="#757575" BorderPane.alignment="CENTER">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                    </right>
                                                    <padding>
                                                        <Insets bottom="5.0" />
                                                    </padding>
                                                </BorderPane>
                                                <Label text="Ngày 15/12 sẽ cúp điện từ 8h-17h để bảo trì" wrapText="true" />
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </VBox>

                                        <VBox layoutX="20.0" layoutY="20.0" style="-fx-border-color: #dddddd; -fx-background-color: #fcfcfc; -fx-border-radius: 3;">
                                            <children>
                                                <BorderPane>
                                                    <left>
                                                        <Label text="Thu tiền phòng tháng 12" BorderPane.alignment="CENTER">
                                                            <font>
                                                                <Font name="System Bold" size="14.0" />
                                                            </font>
                                                        </Label>
                                                    </left>
                                                    <right>
                                                        <Label text="2024-12-01" textFill="#757575" BorderPane.alignment="CENTER">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                    </right>
                                                    <padding>
                                                        <Insets bottom="5.0" />
                                                    </padding>
                                                </BorderPane>
                                                <Label text="Yêu cầu các phòng đóng tiền trước ngày 05/12" wrapText="true" />
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </VBox>

                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>