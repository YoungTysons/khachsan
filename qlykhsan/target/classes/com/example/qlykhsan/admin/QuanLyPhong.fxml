<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qlykhsan.admin.QuanlyPhong">
    <children>
        <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <top>
                <Label text="Quản Lý Phòng Trọ" BorderPane.alignment="CENTER_LEFT">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
            </top>

            <center>
                <TableView fx:id="tablePhong" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="colTenPhong" prefWidth="120.0" text="Tên phòng" />
                        <TableColumn fx:id="colGia" prefWidth="120.0" text="Giá (VNĐ)" />
                        <TableColumn fx:id="colMoTa" prefWidth="250.0" text="Mô tả" />
                        <TableColumn fx:id="colTrangThai" prefWidth="100.0" text="Trạng thái" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </TableView>
            </center>

            <right>
                <VBox prefHeight="540.0" prefWidth="320.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
                    <children>
                        <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;" text="Thông tin phòng">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </Label>

                        <VBox spacing="15.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tên phòng" />
                                        <TextField fx:id="tfTenPhong" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Giá thuê (VNĐ)" />
                                        <TextField fx:id="tfGiaThue" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Mô tả" />
                                        <TextArea fx:id="taMoTa" prefHeight="80.0" wrapText="true" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Trạng thái" />
                                        <ComboBox fx:id="cbTrangThai" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Trống" />
                                    </children>
                                </VBox>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnThem" mnemonicParsing="false" prefWidth="60.0" text="Thêm">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnSua" mnemonicParsing="false" prefWidth="50.0" text="Sửa">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnXoa" mnemonicParsing="false" prefWidth="50.0" text="Xóa" >
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnHuy" mnemonicParsing="false" prefWidth="50.0" text="Hủy" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </VBox>
            </right>
        </BorderPane>
    </children>
</AnchorPane>