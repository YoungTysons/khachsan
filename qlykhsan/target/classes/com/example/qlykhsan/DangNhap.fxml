<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qlykhsan.DangNhap">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="HỆ THỐNG KHÁCH SẠN">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="Tên Đăng Nhập:" />
        <TextField fx:id="txtUsername" promptText="Nhập tài khoản..." />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="Mật Khẩu:" />
        <PasswordField fx:id="txtPassword" promptText="Nhập mật khẩu..." />
    </VBox>

    <Button text="Đăng Nhập" onAction="#handleDangNhap" prefWidth="120.0" style="-fx-font-weight: bold;"/>
    
    <Label fx:id="lblError" textFill="RED" />
</VBox>