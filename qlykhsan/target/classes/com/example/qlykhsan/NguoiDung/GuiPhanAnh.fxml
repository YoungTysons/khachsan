<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qlykhsan.NguoiDung.GuiPhanAnh">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Gửi Phản Ánh">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <VBox maxWidth="500.0" >
                    <children>
                        <Label maxWidth="1.7976931348623157E308" text="Form phản ánh">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                            </padding>
                        </Label>

                        <VBox spacing="10.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tiêu đề" />
                                        <TextField fx:id="tfTieuDe" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nội dung phản ánh" />
                                        <TextArea fx:id="taNoiDung" prefHeight="150.0" wrapText="true" />
                                    </children>
                                </VBox>

                                <Button fx:id="btnGuiPhanAnh" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Gửi phản ánh">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" top="8.0" />
                                    </padding>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>